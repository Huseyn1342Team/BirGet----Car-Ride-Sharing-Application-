<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boz"
    tools:context=".InvestorFinder1">
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adview1"
        android:layout_marginTop="4dp"
        android:layout_above="@id/navigation"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/adview1"
        android:id="@+id/adview2"

        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:id="@+id/banner"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="35dp"
        android:text="That is our business"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"/>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
       <androidx.cardview.widget.CardView
           android:layout_centerVertical="true"
           android:id="@+id/investors"
           android:layout_centerHorizontal="true"
           android:layout_width="165dp"
           android:layout_height="120dp"
           app:cardCornerRadius="10dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="65dp"
                   android:layout_height="65dp"
                   android:src="@drawable/moneyinvestorfinder"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/investorfinderimage"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="23sp"
                   android:textColor="@android:color/black"
                   android:text="Investors"
                   android:layout_below="@id/investorfinderimage"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/investorfindertext"/>
           </RelativeLayout>
       </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/producer"
            android:layout_centerHorizontal="true"
            android:layout_width="165dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/producer"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/producerimage"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:textColor="@android:color/black"
                    android:text="Producers"
                    android:layout_below="@id/producerimage"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/producertext"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/navigation"
        app:menu="@menu/menu1"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="#fff"
        app:itemIconTint="#fff"
        app:itemBackground="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>