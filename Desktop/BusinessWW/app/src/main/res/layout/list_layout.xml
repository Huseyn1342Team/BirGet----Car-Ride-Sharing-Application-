<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilimage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/pp"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:id="@+id/nameandsurname"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@id/profilimage"
                android:text="Barcelona Aliyev"/>
            <TextView
                android:id="@+id/date"
                android:layout_toRightOf="@id/profilimage"
                android:layout_below="@id/nameandsurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/secondcolor"
                android:text="17 Yanvar,23:30"/>
            <TextView
                android:id="@+id/post"
                android:layout_below="@id/profilimage"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="menu dbahbdasbdj  dhjdfhjbaf f hhdbh hdhvh hd h d hd hvdhh v h dhdnnd  dh hj v hd v jd sdj hjvj fshv jh vj sdvhj hvd dhvhj v dv cnsdhv   s cj jsvnshnv j hndnv  nvnj nfd vj vndn  dnsnvv ndsnsdn "
                />
            <ImageView
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone"
                android:layout_below="@id/post"/>

            <ImageView
                android:id="@+id/amount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/image"
                android:layout_marginLeft="10dp"
                android:background="@drawable/star" />
            <TextView
                android:id="@+id/amounttext"
                android:text="18 likes"
                android:layout_below="@id/image"
                android:layout_toRightOf="@id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondcolor"
                android:textSize="13sp"/>
            <ImageView
                android:id="@+id/commentimage"
                android:layout_marginLeft="140dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/commentamount"
                android:layout_below="@id/image"
                android:layout_toRightOf="@id/amounttext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/secondcolor"
                android:text="12 comments"
                android:layout_below="@id/image"
                android:layout_toRightOf="@id/commentimage"
                android:id="@+id/commenttext"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/line1"
                android:layout_below="@id/commentimage"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/likebutton"
                    android:background="@drawable/starborder"
                    android:layout_width="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:id="@+id/liketext"
                    android:text="Like"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/likebutton"/>
                    <LinearLayout
                        android:id="@+id/line2"
                        android:layout_toRightOf="@id/liketext"
                        android:layout_width="2dp"
                        android:layout_marginLeft="65dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/boz"/>
                    <ImageView
                        android:layout_toRightOf="@id/line2"
                        android:id="@+id/commentbutton"
                        android:background="@drawable/comment"
                        android:layout_width="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:id="@+id/comment"
                        android:text="Comment"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/commentbutton"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/line3"
                android:layout_below="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/commentprofilsekli"
                        android:src="@drawable/flag_azerbaijan"
                        android:layout_centerVertical="true"/>

                    <EditText
                        android:id="@+id/commentedittext"
                        android:layout_width="200dp"
                        android:layout_height="39dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@id/commentprofilsekli"
                        android:hint="Write here something" />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:text="Sent"
                        android:textColor="#fff"
                        android:id="@+id/commentsent"
                        android:layout_toRightOf="@id/commentedittext"
                        android:layout_centerVertical="true"
                        android:background="@drawable/buttoncolor"/>
                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>