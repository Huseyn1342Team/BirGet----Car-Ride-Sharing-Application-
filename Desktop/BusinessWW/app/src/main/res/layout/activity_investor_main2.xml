<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvestorMain2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:id="@+id/header"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adview1"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adview2"
        android:layout_below="@id/adview1"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    <TextView
        android:layout_below="@id/adview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="29sp"
        android:textColor="@android:color/white"
        android:text="Our work is your future"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/info"
            android:orientation="vertical">
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textSize="21sp"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/scaleinfo"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/request"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requests"
                android:textSize="21sp"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:id="@+id/scalerequest"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/search"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="21sp"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:id="@+id/scalesearch"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/infoscroll"
        android:layout_marginTop="20dp"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/titleforcategory"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Which category does your product involve?"
                android:textColor="@android:color/black"
                android:textSize="23sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleforcategory"
                android:id="@+id/lineforcategory"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/categorytext"
                android:textColor="@color/boz"
                android:layout_marginTop="10dp"
                android:text="For my need, artificial inteligen is my first interest topic in technology."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:layout_below="@id/lineforcategory"
                android:layout_gravity="start" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/categorytext"
                android:id="@+id/line2forcategory"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/titleforcharacter"
                android:layout_below="@id/line2forcategory"
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="Investors' aspect which is crucial for your"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleforcharacter"
                android:id="@+id/lineforcharacter"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have got very good game for this insurance company because I want to go to USA."
                android:textColor="@color/boz"
                android:layout_below="@id/lineforcharacter"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:gravity="start" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/character"
                android:layout_marginTop="20dp"
                android:id="@+id/line2forcharacter"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/titleforexperience"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:text="What is your experience?"
                android:textAlignment="center"
                android:layout_below="@id/line2forcharacter"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleforexperience"
                android:layout_marginTop="15dp"
                android:id="@+id/line1forexperience"
                android:orientation="horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/line1forexperience"
                android:id="@+id/experience"
                android:text="I made investment in 2013 with the SINAM MMC, which is one of the most important company in Azerbaijan."
                android:textColor="@color/boz"
                android:layout_marginTop="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_marginTop="15dp"
                android:layout_below="@id/experience"
                android:id="@+id/line2forexperience"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/titleforneed"
                android:layout_below="@id/line2forexperience"
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="What is your need for turning idea into real?"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleforneed"
                android:id="@+id/lineforneed"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have got very good game for this insurance company because I want to go to USA."
                android:textColor="@color/boz"
                android:layout_below="@id/lineforneed"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:gravity="start" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/line3"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/titleforconcept"
                android:layout_below="@id/line3"
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="What is your need for turning idea into real?"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleforconcept"
                android:id="@+id/lineforconcept"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/concept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have got very good game for this insurance company because I want to go to USA."
                android:textColor="@color/boz"
                android:layout_below="@id/lineforconcept"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:gravity="start" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/concept"
                android:id="@+id/line2forconcept"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/titleforteam"
                android:layout_below="@id/line2forconcept"
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="Who is your teammates?"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleforteam"
                android:id="@+id/lineforteam"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our team has got 2 members: Huseyn Aliyev and Rasul Aliyev."
                android:textColor="@color/boz"
                android:layout_below="@id/lineforteam"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:gravity="start" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/team"
                android:id="@+id/line2forteam"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/titleformarketing"
                android:layout_below="@id/line2forteam"
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="What is your marketing plan?"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleformarketing"
                android:id="@+id/lineformarketing"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/marketing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We will promote our application in social media."
                android:textColor="@color/boz"
                android:layout_below="@id/lineformarketing"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:gravity="start" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/marketing"
                android:id="@+id/line2formarketing"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/titleforfuture"
                android:layout_below="@id/line2formarketing"
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="What is your future plan?"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/titleforfuture"
                android:id="@+id/lineforfuture"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/future"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We will get 100000 download within 10 months."
                android:textColor="@color/boz"
                android:layout_below="@id/lineforfuture"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:gravity="start" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/boz"
                android:layout_below="@id/future"
                android:id="@+id/line2forfuture"
                android:orientation="horizontal"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/line2forfuture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/belowline"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pricetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="@android:color/black"
                    android:text="Your investment budget: "/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 USD"
                    android:textColor="@android:color/black"
                    android:textSize="19sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/line4"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/belowline">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="@android:color/black"
                    android:text="Your investment country: "
                    android:id="@+id/countrytitle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="@android:color/black"
                    android:text="United States"
                    android:id="@+id/country"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ScrollView
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_below="@+id/line1"
        android:id="@+id/requestscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/postlist"/>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:id="@+id/searchscroll">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/titlesearch"
                android:textColor="@android:color/black"
                android:text="Search For Investor"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/searchdescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:text="1. What is the amount of investment you want to receive?"
                android:layout_below="@id/titlesearch"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:hint="You must insert in USD amount"
                android:id="@+id/amount"
                android:layout_below="@id/searchdescription1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:text="2. Which country do you want to receive investment?"
                android:layout_below="@id/amount"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/description2"/>
            <Spinner
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:id="@+id/countryspinner"
                android:layout_below="@id/description2"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:text="3. What is your project category?"
                android:layout_below="@id/countryspinner"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/description3"/>
            <Spinner
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:id="@+id/category"
                android:layout_below="@id/description3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/submit"
                android:textColor="@android:color/white"
                android:layout_below="@id/category"
                android:layout_marginTop="10dp"
                android:layout_width="145dp"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:text="Submit"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>